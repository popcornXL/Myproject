class Solution {
    public String reverseString(String s) {
        //method 1
        //StringBuilder bf=new StringBuilder(s);
        //return bf.reverse().toString();
        
        //method 2
        if(s==null || s.length()==0){
            return "";
        }
        char bb[]=s.toCharArray();
        int begin=0;
        //int end=s.length()-1;
        int end=s.length()-1;
        while(begin<=end){
            char sr=bb[begin];
            bb[begin]=bb[end];
            bb[end]=sr;
            begin++;
            end--;
        }
        return new String(bb);
    }
}
